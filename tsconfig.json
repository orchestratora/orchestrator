{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@testing": ["libs/core/testing/src/public_api.ts"],
      "@orchestrator/core": ["libs/core/src/public_api.ts"],
      "@orchestrator/core/*": ["libs/core/*/src/public_api.ts"],
      "@orchestrator/layout": ["libs/layout/src/public_api.ts"],
      "@orchestrator/ui-web": ["libs/ui-web/src/public_api.ts"],
      "@orchestrator/stepper": ["libs/stepper/src/public_api.ts"],
      "@orchestrator/composer": ["libs/composer/src/public_api.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
