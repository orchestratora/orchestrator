{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": [],
    "lib": ["dom", "es2015"],
    "paths": {
      "@orchestrator/*": ["dist/libs/*"]
    }
  },
  "include": ["src/public_api.ts"],
  "exclude": ["src/test.ts", "**/*.spec.ts", "**/*.test.ts"]
}
